@model Trip
@{
    ViewBag.Title = "Add Things to do in ";
}

<h2>Add things to do in  </h2>


<form asp-action="AddTrip">
    <div asp-validation-summary="All" class="text-danger">
        <div class="form-group">
            
            <input asp-for="ThingToDo1" class="form-control" />
        </div>
        <div class="form-group">
            
            <input asp-for="ThingToDo2" class="form-control" />
        </div>
        <div class="form-group">
           
            <input asp-for="ThingToDo3" class="form-control" />
        </div>
    </div>


    <div class="form-inline">
        <button asp-action="Add" asp-route-id="Page3" class="btn btn-dark" type="submit">Save</button>
        <button asp-controller="Home" asp-action="Index"
                class="btn btn-outline-dark">
            Clear
        </button>
        
    </div>
    </form>
