@model List<Trip>
@{ 
    ViewBag.Title = "My Trip Log";
}

<a asp-controller="Trip" asp-action="Add">AddTrip</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Accommodations</th>
            <th>Things to Do</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model)
        {
        <tr>
            <td>@trip.Destination</td>
            <td>@trip.StartDate</td>
            <td>@trip.EndDate</td>
            <td>
                @trip.Accommodation <br>
                @trip.AccommodationPhone<br>
                @trip.AccommodationEmail
            </td>
            <td>
                @trip.ThingToDo1<br />
                @trip.ThingToDo2<br />
                @trip.ThingToDo3
            </td>
        </tr>
        }
    </tbody>


</table>
