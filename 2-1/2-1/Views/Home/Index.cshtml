@model _2_1.Models.PriceQuotationModel
@{
    ViewBag.Title = "Price Quotation";
}
<h1>Price Quotation</h1>
<form asp-action="Index" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <label for="Subtotal" class="col-sm-2">Subtotal:</label>
        <div class="col-sm-10">
            <input type="text" id="Subtotal" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="DiscountPercent" class="col-sm-2">Discount percent:</label>
        <div class="col-sm-10">
            <input type="text" id="DiscountPercent" class="form-control"/>
        </div>
        
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Discount amount</label>
        <div class="col-sm-10">
            <input value="@ViewBag.DA.ToString("C2")" readonly>
        </div>
        
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Total:</label>
        <div class="col-sm-10">
            <input value="@ViewBag.PT.ToString("C2")" readonly>
        </div>
        
    </div>
    <button type="submit">Calculate</button>
    <a asp-action="Index">Clear</a>
</form>
