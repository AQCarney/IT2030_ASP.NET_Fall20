@model Contact
@{
   ViewBag.Title = "Contact Details";
}
<h2>@ViewBag.Title</h2>
<form asp-action="Details">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Fname">First Name</label>
        <input asp-for="Fname" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Lname">Last Name</label>
        <input asp-for="Lname" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Category.Name">Category</label>
        <input asp-for="Category.Name" class="form-control" readonly>
    </div>

    <input type="hidden" asp-for="ContactId" />

    <a asp-controller="Contact" asp-action="Edit"
       asp-route-id="@Model.ContactId"
       asp-route-slug="@Model.Slug"
       class="btn btn-primary">Edit</a>

    <a asp-controller="Contact" asp-action="Delete"
       asp-route-id="@Model.ContactId"
       asp-route-slug="@Model.Slug"
       class="btn btn-primary">Delete</a>

        <a asp-controller="Home" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>



