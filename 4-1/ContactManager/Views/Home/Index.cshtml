@model List<Contact>
@{
    ViewBag.Title = "Contact Manager";
}


<h2>Contact Manager</h2>

<a asp-controller="Contact" asp-action="Add">Add Contact</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Fname</td>
                <td>@contact.Lname</td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
                <td>@contact.Category.Name</td>
                <td>
                    <a asp-controller="Contact" asp-action="Edit"
                       asp-route-id="@contact.ContactId"
                       asp-route-slug="@contact.Slug">Edit</a>

                    <a asp-controller="Contact" asp-action="Delete"
                       asp-route-id="@contact.ContactId"
                       asp-route-slug="@contact.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>