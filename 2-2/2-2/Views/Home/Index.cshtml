@model _2_2.Models.TipCalculatorModel
@{ 
    ViewBag.Title = "Tip Calculator";
}
<h1>Tip Calculator</h1>
<form asp-action="Index" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="CostOfMeal">Cost of meal:</label>
        <input asp-for="CostOfMeal" />
    </div>
    <div>
        <label>15% tip:</label>
        <input value="@ViewBag.FT.ToString("C2")" readonly />
    </div>
    <div>
        <label>20% tip:</label>
        <input value="@ViewBag.TT.ToString("C2")" readonly />
    </div>
    <div>
        <label>25% tip:</label>
        <input value="@ViewBag.TF.ToString("C2")" readonly />
    </div>
    <button type="submit">Calculate</button>
    <a asp-action="Index">Clear</a>
</form>
